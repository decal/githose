# Uncomment this line for debugging
#set -x

[ -d '../inc' ] && cd ..
[ -d '../../inc' ] && cd ../..

source -- inc/colors
source -- inc/regexes
source -- inc/usages

if ( [ ! "$BASH_ARGV[$#{BASH_ARGV[*]}]" ] && [ "${BASH_ARGV[${#BASH_ARGV[*]}]:0:5]}" != 'clone' ] && [ "${BASH_ARGV[${#BASH_ARGV[*]}:0:4]}" != 'pull' ] ) || [ ! "$2" ]
  then githoseUsage 

  exit -1
fi

[ $verboseFlag ] && echo -e "args: ${yellowb}$BASH_ARGV"

lib/driver $*

echo "$reset"

exit 0
